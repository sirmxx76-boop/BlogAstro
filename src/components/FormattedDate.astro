---
interface Props {
  date: Date;
  locale?: string;
}

const { date, locale = 'nl-NL' } = Astro.props;

const formattedDate = date.toLocaleDateString(locale, {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<time datetime={date.toISOString()}>
  {formattedDate}
</time>

<style>
  time {
    color: rgb(var(--gray));
    font-size: 0.95em;
  }
</style>
