---
import { Image } from 'astro:assets';
import WordPressLayout from '../layouts/WordPressLayout.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getPosts } from '../lib/wordpress';

const posts = await getPosts();
---

<WordPressLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <div class="posts-grid">
    {
      posts.map((post) => {
        const featuredImage = post._embedded?.['wp:featuredmedia']?.[0];

        return (
          <article class="post-card card">
            {featuredImage?.source_url && (
              <div class="post-image">
                <a href={`/${post.slug}/`}>
                  <Image
                    src={featuredImage.source_url}
                    alt={featuredImage.alt_text || post.title.rendered}
                    width={640}
                    height={360}
                    inferSize
                    loading="lazy"
                    class="featured-img"
                  />
                </a>
              </div>
            )}

            <div class="post-body">
              <h2 class="post-title">
                <a href={`/${post.slug}/`}>{post.title.rendered}</a>
              </h2>

              <div class="post-excerpt wp-content" set:html={post.excerpt.rendered} />

              <a href={`/${post.slug}/`} class="read-more-btn">
                Lees meer
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path
                    d="M6 3l5 5-5 5"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </a>
            </div>
          </article>
        );
      })
    }
  </div>
</WordPressLayout>

<style>
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-xl);
  }

  .post-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--divider);
  }

  .featured-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .post-card:hover .featured-img {
    transform: scale(1.05);
  }

  .post-body {
    padding: var(--spacing-md);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    flex: 1;
  }

  .post-title {
    font-size: 1.5rem;
    margin: 0;
    line-height: 1.3;
  }

  .post-title a {
    color: var(--text-primary);
    transition: color var(--transition-fast);
  }

  .post-title a:hover {
    color: var(--primary);
  }

  .post-excerpt {
    flex: 1;
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .post-excerpt :global(p) {
    margin: 0;
  }

  .read-more-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs) var(--spacing-md);
    background: var(--primary);
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    align-self: flex-start;
  }

  .read-more-btn:hover {
    background: var(--primary-dark);
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
  }
</style>
